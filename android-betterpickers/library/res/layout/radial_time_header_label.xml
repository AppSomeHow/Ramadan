<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/time_display"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <org.jraf.android.backport.switchwidget.Switch
        android:id="@+id/repeat_switch"
        style="@style/Widget.Holo.Light.CompoundButton.Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp" />

    <TextView
        android:id="@+id/hour_space"
        style="@style/aosp_time_label"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:importantForAccessibility="no"
        android:text="@string/time_placeholder"
        android:textSize="32sp"
        android:visibility="invisible" />
 
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.doomonafireball.betterpickers.widget.AccessibleTextView
            android:id="@+id/hours"
            style="@style/aosp_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="38dp"
            android:gravity="right"
            android:text="@string/time_placeholder"
            android:textColor="@color/blue"
            android:textSize="32sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/separator"
        style="@style/aosp_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:paddingLeft="@dimen/separator_padding"
        android:paddingRight="@dimen/separator_padding"
        android:text="@string/time_separator"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/minutes_space"
        style="@style/aosp_time_label"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:importantForAccessibility="no"
        android:text="@string/time_placeholder"
        android:textSize="32sp"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.doomonafireball.betterpickers.widget.AccessibleTextView
            android:id="@+id/minutes"
            style="@style/aosp_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/time_placeholder"
            android:textSize="32sp" />
    </FrameLayout>

    <com.doomonafireball.betterpickers.widget.AccessibleTextView
        android:id="@+id/ampm_hitspace"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:checked="true"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/ampm_label"
        style="@style/aosp_ampm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:text="@string/time_placeholder" />

</LinearLayout>