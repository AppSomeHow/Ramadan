<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginTop="@dimen/dp_10">

    <com.apptitive.ramadan.views.BanglaTextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:banglaText="@string/action_alarm"
        android:textSize="@dimen/text_size_20"
        app:fontName="@string/font_solaimanlipi" />


    <com.apptitive.ramadan.views.BanglaTextView
        android:id="@+id/tv_iftar"
        android:layout_below="@id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:banglaText="@string/before_iftar"
        app:fontName="@string/font_solaimanlipi" />

    <EditText
        android:layout_below="@id/tv_top"
        android:layout_toRightOf="@id/tv_iftar"
        android:layout_width="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_iftar_hour"
        android:minWidth="@dimen/dp_15"
        android:inputType="number"
        android:maxLength="1"
        android:hint="hh" />

    <EditText
        android:layout_toRightOf="@id/et_iftar_hour"
        android:layout_below="@id/tv_top"
        android:id="@+id/et_iftar_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp_15"
        android:maxLength="2"
        android:inputType="number"
        android:hint="mm" />

    <Switch
        android:layout_below="@id/tv_top"
        android:layout_toRightOf="@id/et_iftar_minute"
        android:id="@+id/switch_iftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true" />


    <com.apptitive.ramadan.views.BanglaTextView
        android:layout_below="@id/et_iftar_hour"
        android:layout_alignRight="@id/tv_iftar"
        android:id="@+id/tv_sehri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:banglaText="@string/before_sehri"
        app:fontName="@string/font_solaimanlipi" />

    <EditText
        android:layout_below="@id/et_iftar_hour"
        android:layout_alignLeft="@id/et_iftar_hour"
        android:layout_toRightOf="@id/tv_sehri"
        android:id="@+id/et_sehri_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp_15"
        android:inputType="number"
        android:maxLength="1"
        android:hint="hh" />

    <EditText
        android:layout_below="@id/et_iftar_hour"
        android:layout_toRightOf="@id/et_sehri_hour"
        android:id="@+id/et_sehri_minute"
        android:minWidth="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:hint="mm"
        android:layout_height="wrap_content" />

    <Switch
        android:layout_below="@id/et_iftar_hour"
        android:layout_toRightOf="@id/et_sehri_minute"
        android:checked="true"
        android:id="@+id/switch_sehri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/done"
        android:layout_below="@id/et_sehri_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="Done" />
</RelativeLayout>
