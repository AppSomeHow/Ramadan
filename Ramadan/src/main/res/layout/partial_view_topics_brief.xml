<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:alpha=".8">

    <com.appsomehow.ramadan.views.BanglaTextView
        android:id="@+id/btv_topic_hint"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/dp_15"
        app:fontName="@string/font_solaimanlipi"
        android:textSize="16sp"
        android:textColor="@color/White" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/btv_topic_hint"
        android:layout_alignBaseline="@id/btv_topic_hint"
        android:alpha=".2"
        android:background="@android:color/white" />

    <ImageView
        android:id="@+id/imageview_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/divider"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_15"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/btv_topic_hint"/>
</RelativeLayout>