<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appsomehow.ramadan.ParallaxFragment">

    <uk.co.chrisjenx.paralloid.views.ParallaxScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parallax_scrollview"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/Red"
                android:alpha=".8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_activity_saom" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_overflow"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/parallax_text"
                android:background="@color/transparent_black"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </uk.co.chrisjenx.paralloid.views.ParallaxScrollView>
</FrameLayout>
