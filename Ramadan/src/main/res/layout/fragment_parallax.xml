<com.appsomehow.ramadan.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parallax_scrollview"
    android:layout_gravity="center"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="?attr/actionBarSize">

        <com.appsomehow.ramadan.views.BanglaTextView
            android:id="@+id/textview_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Black"
            android:layout_margin="@dimen/dp_8"
            android:padding="@dimen/dp_10"
            android:alpha=".8"
            app:banglaText="@string/parallax_text"
            app:fontName="@string/font_solaimanlipi"
            app:justify="false"
            android:textSize="16sp"
            android:textColor="@color/white" />
    </LinearLayout>
</com.appsomehow.ramadan.views.ParallaxScrollView>
