<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#009245"
    android:alpha=".8">

    <ImageView
        android:id="@+id/imageView_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:src="@drawable/ic_saom" />

    <com.appsomehow.ramadan.views.BanglaTextView
        android:id="@+id/btv_topic_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView_topic"
        android:layout_centerVertical="true"
        app:fontName="@string/font_solaimanlipi"
        android:textSize="20sp"
        android:textColor="@color/white" />
</RelativeLayout>