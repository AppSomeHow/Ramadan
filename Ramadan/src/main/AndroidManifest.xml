<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsomehow.ramadan">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_ramadan"
        android:label="@string/app_name"
        android:theme="@style/Theme.Ramadan">
        <activity
            android:name="com.appsomehow.ramadan.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:parentActivityName="com.appsomehow.ramadan.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appsomehow.ramadan.MainActivity" />
        </activity>
        <activity
            android:name="com.appsomehow.ramadan.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.appsomehow.ramadan.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appsomehow.ramadan.MainActivity" />
        </activity>
        <activity
            android:name="com.appsomehow.ramadan.TopicsActivity"
            android:label="@string/title_activity_topics"
            android:parentActivityName="com.appsomehow.ramadan.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appsomehow.ramadan.MainActivity" />
        </activity>
        <activity
            android:name=".AboutUsActivity"
            android:label="@string/title_activity_about_us"></activity>
        <activity
            android:name="com.appsomehow.ramadan.SehriIfterActivity"
            android:label="@string/title_activity_sehri_ifter"
            android:parentActivityName="com.appsomehow.ramadan.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appsomehow.ramadan.MainActivity" />
        </activity>

        <service
            android:name=".services.RingtonService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".services.MusicService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".receiver.NotificationCancelReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="notification_cancelled" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
