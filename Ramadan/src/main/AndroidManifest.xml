<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsomehow.ramadan">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_ramadan"
        android:label="@string/app_name"
        android:theme="@style/Theme.Ramadan">
        <activity
            android:name="com.appsomehow.ramadan.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appsomehow.ramadan.SaomActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appsomehow.ramadan.MainActivity" />
        </activity>

        <receiver
            android:name="com.appsomehow.ramadan.receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity
            android:name="com.appsomehow.ramadan.preferences.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appsomehow.ramadan.MainActivity" />
        </activity>
    </application>

</manifest>
