<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsomehow.ramadan" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_ramadan"
        android:label="@string/app_name"
        android:theme="@style/Theme.Ramadan" >
        <activity
            android:name="com.appsomehow.ramadan.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appsomehow.ramadan.SaomActivity"
         android:label="@string/activity_saom"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appsomehow.ramadan.MainActivity" />
        </activity>

        <receiver
            android:name="com.appsomehow.ramadan.receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.appsomehow.ramadan.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.appsomehow.ramadan.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appsomehow.ramadan.MainActivity" />
        </activity>

        <service
            android:name="com.appsomehow.ramadan.com.appsomehow.ramadan.services.RingTonService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name="com.appsomehow.ramadan.services.RingtonService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name="com.appsomehow.ramadan.services.MyService"
            android:exported="false" >
        </service>
    </application>

</manifest>
